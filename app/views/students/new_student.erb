<div id="outline">
        <div class="container">
            <div id="outline-row" class="row justify-content-center align-items-center">
                <div id="outline-column" class="col-md-6">
                    <div id="outline-box" class="col-md-12">
                        <form id="outline-form" class="form" action="/student" method="post">
                            <h3 class="text-center text-dark">Register New Studetns</h3>
                            <% if @error == true %>
                                <div class="form-group">
                                    <a class="text-danger"> <%=@error_msg%> </a>
                                </div>                        
                            <%end%>
                            <div class="form-group">
                                <label for="first_name" class="text-dark">First Name:</label><br>
                                <input type="text" class="form-control" id="first_name" name="first_name">
                            </div>
                            <div class="form-group">
                                <label for="last_name" class="text-dark">Last Name:</label><br>
                                <input type="text" name="last_name" id="last_name" class="form-control">
                            </div>
                            <!-- ERROR : dosen't work javascript -->
                            <div class="form-group" data-provide="datepicker">
                                    <label for="birth_date" class="text-dark">Birth Date:</label><br>
                                    <input type='text' class="form-control" name="birth_date" id="birth_date">
                                    <div class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </div>
                            </div>
                            <script type="text/javascript">
                                $(function () {
                                    $('#datetimepicker10').datetimepicker({
                                        viewMode: 'years',
                                        format: 'MM/YYYY'
                                    });
                                });
                            </script>
                            </div>
                            <!-- ERROR: not able to send daycare_id -->
                            <div class="form-group">
                                <label for="daycare_id" class="text-dark">Daycare:</label><br>
                                <select name="daycare_id" id="daycare_id" class="form-control">
                                    <% @daycares.each do |daycare| %>
                                        <option value="<% daycare.id %>"><%= daycare.name %></option>
                                    <% end %>
                                </select>
                            </div>
                            <!-- ERROR: not able to send multiple attendance day -->
                            <fieldset class="form-group" name="attendance_day" id="attendance_day">
                                <div class="row">
                                  <legend class="col-form-label col-sm-2 pt-0">Attendance Day</legend>
                                  <div class="col-sm-10">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="mon" id="attendance_day" value="mon" checked>
                                        <label class="form-check-label" for="attendance_day">
                                            Mon
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="tue" id="attendance_day" value="tue">
                                        <label class="form-check-label" for="attendance_day">
                                            Tue
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="wed" id="attendance_day" value="wed">
                                        <label class="form-check-label" for="attendance_day">
                                            Wed
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="thu" id="attendance_day" value="thu">
                                        <label class="form-check-label" for="attendance_day">
                                            Thu
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="fri" id="attendance_day" value="fri">
                                        <label class="form-check-label" for="attendance_day">
                                            Fri
                                        </label> 
                                    </div>
                                  </div>
                                </div>
                            </fieldset>
                            <fieldset class="form-group">
                                <div class="row">
                                  <legend class="col-form-label col-sm-2 pt-0">Check Allergy:</legend>
                                  <div class="col-sm-10">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="check_allergy" id="check_allergy" value="true">
                                        <label class="form-check-label" for="check_allergy">
                                            Yes
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="check_allergy" id="check_allergy" value="false" checked>
                                        <label class="form-check-label" for="check_allergy">
                                            No
                                        </label>
                                    </div>
                                  </div>
                                </div>
                            </fieldset> 
                            <div class="form-group">
                                <label for="allergies" class="text-dark">Allergies:</label><br>
                                <input type="text" name="allergies" id="allergies" class="form-control">
                            </div> 
                            <div class="form-group">
                                <label for="attendance_day" class="text-dark">Admission Date:</label><br>
                                <input type="text" name="admission_date" id="admission_date" class="form-control">
                                <span class="add-on">
                                    <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
                                </span>
                            </div>
                            <script type="text/javascript">
                                $(function() {
                                    $('#datetimepicker4').datetimepicker({
                                    pickTime: false
                                    });
                                });
                            </script>                          
                            <div class="form-group">
                                <label for="information" class="text-dark">Special Note:</label><br>
                                <textarea name="information" id="information" class="form-control"></textarea>
                            </div>                             
                            <div class="form-group">
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="submit">
                            </div>
                            <div id="link" class="text-right">
                                <a href="/show" class="text-dark">Back to Main</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
