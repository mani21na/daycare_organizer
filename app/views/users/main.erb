

    <div id="outline">
        <div class="container">
            <div id="outline-row" class="row justify-content-center align-items-center">
                <div id="outline-column" class="col-md-6">
                    <div id="outline-box" class="col-md-12">
                        <div class="form-group">
                            <label for="username" class="text-dark">User Name: </label>
                            <label for="username" class="text-dark"><%= @user.first_name %> <%= @user.last_name %><%current_user.username%></label>&nbsp;&nbsp;&nbsp; 
                            <a href="/user/account/edit" class="text-info">Account Settings</a>
                        </div>
                        <% if @user.students.count != 0 %>
                            <p>"Please click kid's name for accessing their daycare."</p>
                        <% end %>
                        <% @user.students.each do |student| %>
                            <div class="form-group">
                                <label for="student_name" class="text-dark">Student Name: </label>
                                <a href="/daycare/<%= student.id %>"><%= student.first_name %> <%= student.last_name %></a>&nbsp;&nbsp;&nbsp; 
                                <a href="/student/<%= student.id %>/edit" class="text-info">Student Settings</a>
                            </div>
                        <% end %>
                        
                        <form id="outline-form" class="form" action="/student/new" method="GET">
                            <div class="form-group">
                                <input type="submit" name="submit" class="btn btn-info btn-md" value="Add Students">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
